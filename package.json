{
  "name": "pouch-vue",
  "version": "0.3.5",
  "description": "PouchDB bindings for Vue.js",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "test:unit": "jest --no-cache"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/tests/global-mocks.js"
    ],
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:MDSLKTR/pouch-vue.git"
  },
  "author": "Simon Kunz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MDSLKTR/pouch-vue/issues"
  },
  "files": [
    "lib",
    "types",
    "src",
    "rollup.config.js"
  ],
  "keywords": [
    "pouchdb",
    "vue",
    "vue.js",
    "couchdb",
    "pouch-vue"
  ],
  "homepage": "https://github.com/MDSLKTR/pouch-vue",
  "dependencies": {
    "pouchdb-live-find": "^0.4.0",
    "pouchdb-utils": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@vue/babel-preset-app": "^3.6.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "jest": "^24.7.1",
    "node-fetch": "^2.3.0",
    "pouchdb-authentication": "^1.1.3",
    "pouchdb-find": "^7.0.0",
    "pouchdb-node": "^7.0.0",
    "rollup": "^1.7.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.1",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "^2.6.10"
  }
}
